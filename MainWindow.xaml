<Window x:Class="vider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vider"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResize"
        MouseDown="Move"
        Title="Vider" 
        WindowStartupLocation="Manual"
        Left="2050"
        Top="1000"
        Height="270" 
        Width="480">

    <Border ClipToBounds="True" Background="#0C0F12" CornerRadius="14">
        <Grid>

            <Rectangle HorizontalAlignment="Left" Height="270" Stroke="Black" VerticalAlignment="Top" Width="480" RadiusX="14" RadiusY="14">
                <Rectangle.Fill>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <MediaElement LoadedBehavior="Manual" Loaded="UserControl" Name="mediaElement" />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Rectangle.Fill>
            </Rectangle>

            <StackPanel Margin="14"> 
                <TextBlock Text="" TextWrapping="Wrap" FontSize="12" Foreground="Yellow" Name="log"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>
